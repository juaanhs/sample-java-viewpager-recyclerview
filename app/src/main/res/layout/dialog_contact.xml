<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232323"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialog_name_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Contact Name"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginTop="100dp"/>

        <TextView
            android:id="@+id/dialog_phone_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Phone Number"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/btn_dialog_call"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/dialog_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Mobile Call"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_dialog_messenger"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawableLeft="@drawable/dialog_message"
            android:drawablePadding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="Use Messenger"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_image_contact"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/boy"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true">
    </ImageView>

</RelativeLayout>